<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title style="align-content:center">@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/bootstrap-datepicker3.css" rel="stylesheet" />

    <script src="@Url.Content("~/js/jquery-3.5.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/jquery-3.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/bootstrap-datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/bootstrap-datepicker.min.js")" type="text/javascript"></script>
</head>
<body>
    
    @RenderSection("Scripts", required: false)
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div>
                @if (User.IsInRole("592F3B0D-2C64-4D42-A0B1-8DB14E424FA2"))
                {
                    <a href="~/Admin/Index" class="navbar-brand">Администратор</a>
                    <a href="~/ExchangeRate/IndexWithPercent" class="navbar-brand">Курсы валют с процентами</a>
                }
                <a href="~/ExchangeRate/Index" class="navbar-brand">Курсы валют</a>
                @if (User.IsInRole("592F3B0D-2C64-4D42-A0B1-8DB14E424FA2") || User.IsInRole("BB938783-4128-472D-8BCD-E61BB5D854C7"))
                {
                    <a href="~/Bank/Index" class="navbar-brand">Банки</a>
                    <a href="~/Currency/Index" class="navbar-brand">Валюты</a>
                }
                <a href="~/ExchangeRate/History" class="navbar-brand">История курсов</a>
            </div>
            <div>
                <a class="navbar-brand">@User.Claims.Where(c => c.Type == "UserFIO").FirstOrDefault().Value</a>
                <a href="~/Account/ChangePassword" class="navbar-brand">Сменить пароль</a>
                <a href="~/Account/LogOut" class="navbar-brand">Выход</a>
            </div>
        </div>
    </nav>
    <!--основной контент-->
    <div class="container-fluid">
        <h1>@ViewBag.Title</h1>
        </br>
        @RenderBody()
        <hr />
    </div>
    <script src="@Url.Content("~/js/jquery-3.5.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/jquery-3.5.1.min.js")" type="text/javascript"></script>

</body>
</html>