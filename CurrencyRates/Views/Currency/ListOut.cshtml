@model List<CurrencyRates.Models.CurrencyModel>
@{
    Layout = null;
}

<select id="currencyListOut" class="form-control col-6">

    @if (Model != null)
    {
        @foreach (var item in Model.OrderBy(m => m.Id))
        {
            @if (TempData["OutId"] != null)
            {
                @if (Convert.ToInt32(TempData["OutId"]) == item.Id)
                {
                    <option selected value="@item.Id">@item.ISO</option>
                }
                else
                {
                    <option value="@item.Id">@item.ISO</option>
                }
            }
            else
            {
                <option value="@item.Id">@item.ISO</option>
            }
        }
    }
</select>
