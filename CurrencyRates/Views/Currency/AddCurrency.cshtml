@{
    ViewBag.Title = "Добавление валюты";

}
@{
    Layout = "_Layout";
}
@section Scripts
{
    <script type="text/javascript">
        function addCurrency() {
            let name = document.getElementById('name').value;
            let iso = document.getElementById('iso').value;

            $.ajax({
                type: "POST",
                url: "/Currency/AddCurrency",
                data: {
                    name: name,
                    iso: iso
                },

                success: function (result) {
                    if (result == "true") {
                        alert("Сохранено");
                        window.location.href = "/Currency/Index";
                    }
                    else { alert(result) }

                }


            })

        }
    </script>
}
<div class="alert alert-primary" style="width:700px">
    <div class="form-group d-flex row align-items-center justify-content-left">
        <label class="col-5" for="name">Наименование Курса</label>
        <input type="text" class="form-control col-6" id="name" aria-describedby="emailHelp" required>
    </div>
    <div class="form-group d-flex row align-items-center justify-content-left">
        <label class="col-5" for="iso">ISO</label>
        <input type="text" class="form-control col-6" id="iso" aria-describedby="emailHelp" required>
    </div>
</div>
<div>
    <div class="form-group d-flex row align-items-top">
        <button type="button" onclick="addCurrency()" class="btn btn-success" style="margin-left: 3%;">Добавить</button>
    </div>
</div>