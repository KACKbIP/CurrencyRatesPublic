@{
    ViewBag.Title = "Добавление банка";

}
@{
    Layout = "_Layout";
}
@section Scripts
{
    <script type="text/javascript">
        function addBank() {
            let name = document.getElementById('name').value;
            let procId = document.getElementById('procId').value;
            let percent = document.getElementById('percent').checked;
            $.ajax({
                type: "POST",
                url: "/Bank/AddBank",
                data: {
                    name: name,
                    processingId: procId,
                    withPercent: percent
                },

                success: function (result) {
                    if (result == "true") {
                        alert("Сохранено");
                        window.location.href = "/Bank/Index";
                    }
                    else { alert(result) }

                }


            })

        }
    </script>
}


<div class="alert alert-primary" style="width:700px">
    <div class="form-group d-flex row align-items-center justify-content-left">
        <label class="col-5" for="name">Наименование Банка</label>
        <input type="text" class="form-control col-6" id="name" aria-describedby="emailHelp" required>
    </div>
    <div class="form-group d-flex row align-items-center justify-content-left">
        <label class="col-5" for="procId">Процессинг ID</label>
        <input type="text" class="form-control col-6" id="procId" aria-describedby="emailHelp" required>
    </div>
    <div class="form-group d-flex row align-items-center justify-content-left">
        <label class="col-5" for="percent">Добавить процент</label>
        <input type="checkbox" class="form-control col-6" id="percent" aria-describedby="emailHelp" required>
    </div>
</div>
<div>
    <div class="form-group d-flex row align-items-top">
        <button type="button" onclick="addBank()" class="btn btn-success" style="margin-left: 3%;">Добавить</button>
    </div>
</div>